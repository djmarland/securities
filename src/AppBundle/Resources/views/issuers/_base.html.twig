{% block body %}
<div class="grid">
    <div class="g 1/4@xl">
        {% include finder.templatePath with finder.vars only %}
    </div>
    <div class="g 3/4@xl">
    <div>
        <h1 class="g-unit h-b">
            {% if issuer.parentGroup %}
                <span class="h-context h-f">
                    {% if issuer.parentGroup.sector.industry %}
                            <a href="{{ path('industries_show', { industry_id : issuer.parentGroup.sector.industry.id }) }}">
                                {{ issuer.parentGroup.sector.industry.name }}
                            </a> &gt;
                    {% endif %}
                    {% if issuer.parentGroup.sector %}
                            <a href="{{ path('sectors_show', { sector_id : issuer.parentGroup.sector.id }) }}">
                                {{ issuer.parentGroup.sector.name }}
                            </a> &gt;
                    {% endif %}
                    <a href="{{ path('groups_show', { group_id : issuer.parentGroup.id }) }}">
                        {{ issuer.parentGroup.name }}
                    </a><span class="invisible"> &gt;</span>
                </span>
            {% endif %}
            {{ issuer.name }}
        </h1>
        <nav><ul class="tabs"
            ><li class="tabs__tab {% if activeTab == 'overview' %}tabs__tab--active{% endif %}"
                ><a class="tabs__link" href="{{ path(
                    'issuers_show',
                    { issuer_id : issuer.id }
                ) }}">Overview</a
            ></li
            ><li class="tabs__tab {% if activeTab == 'securities' %}tabs__tab--active{% endif %}"
                ><a class="tabs__link" href="{{ path(
                    'issuers_securities',
                    { issuer_id : issuer.id }
                ) }}">Securities</a
            ></li
            ><li class="tabs__tab {% if activeTab == 'maturity-profile' %}tabs__tab--active{% endif %}"
                ><a class="tabs__link" href="{{ path(
                    'issuers_maturity_profile',
                    { issuer_id : issuer.id }
                ) }}">Maturity Profile</a
            ></li
            ><li class="tabs__tab {% if activeTab == 'issuance' %}tabs__tab--active{% endif %}"
                ><a class="tabs__link" href="{{ path(
                    'issuers_issuance',
                    { issuer_id : issuer.id }
                ) }}">Issuance</a
            ></li
        ></ul></nav>
        {% block content %}{% endblock %}
    </div>
</div>
{% endblock %}