{% extends 'AppBundle::base.html.twig' %}

{% block body %}
<div class="grid">
    <div class="g 4/5@xxl 5/6@max">
        <div>
        <h1 class="g-unit">{{ meta.title }}</h1>
        <p class="g-unit d">{{ pagination.total }} results</p>
        <div class="grid">
            <div class="g 1/3@xl">
                <div><div class="sticky">
                <ol class="grid">
                    {% for letter in letters %}
                        <li class="g {{ letter.width }}">{%
                            if letter.active
                                %}<a class="link--button text--center" href="#letter-{{ letter.text }}">{{ letter.text }}</a>{%
                            else
                                %}{{ letter.text }}{%
                            endif %}</li>
                    {% endfor %}
                </ol>
                </div></div>
            </div>
            <div class="g 2/3@xl">
                <div>
                {% for letter, group in groups %}
                    <div class="g-unit" id="letter-{{ letter }}">
                        <h2>{{ letter }}</h2>
                        <ul>
                            {%  for issuer in group %}
                                <li>{% include issuer.templatePath with issuer.vars only %}</li>
                            {%  endfor %}
                        </ul>
                    </div>
                {%  endfor %}
                </div>
            </div>
        </div>
        </div>
    </div>
    <div class="g 1/5@xxl 1/6@max">
        {% include adverts.templatePath with adverts.variantVars('overview') only %}
    </div>
</div>
{% endblock %}
