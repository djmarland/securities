{% extends 'AppBundle::base.html.twig' %}

{% use "AppBundle::issuers/_base.html.twig" %}

{% block content %}
    <h2 class="g-unit">Maturity Profile</h2>
    <table class="table table--striped table--small">
        <thead>
        <tr>
            <th>Product</th>
            {% for bucket in buckets %}
                <th>{{ bucket.name }}</th>
            {%  endfor %}
            <th>Total</th>
        </tr>
        </thead>
        <tbody>
        {% for product in tableData %}
            <tr>
                <th>{{ product.name }}</th>
                {% for bucket in product.buckets %}
                    <td>£{{ bucket|number_format }}m</td>
                {% endfor %}
                <td><strong>£{{ product.total|number_format }}m</strong></td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th>Totals</th>
                {% for total in bucketTotals %}
                    <td>£{{ total|number_format }}m</td>
                {% endfor %}
                <td><strong>£{{ absoluteTotal|number_format }}m</strong></td>
            </tr>
        </tfoot>
    </table>
{% endblock %}
