{% extends 'AppBundle::base.html.twig' %}

{% use "AppBundle::reports/_base.html.twig" %}

{% block content %}
    <h2 class="g-unit">Fsa54</h2>
    <div class="grid">
        <div id="chart-area" class="g g--align-center" style="height: 400px">
            <p class="text--center">Drawing graph...</p>
        </div>
        <div class="g">
            <table class="table table--striped">
                <thead>
                    <tr>
                        <th>Currency</th>
                        <th>2015</th>
                        <th>2014</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>USD</td>
                        <td>4.24</td>
                        <td>6.57</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <script>
        google.charts.setOnLoadCallback(drawChart);
        function drawChart() {
            var sourceData = {{ graphData|json_encode|raw }},
                    data = google.visualization.arrayToDataTable(sourceData),
                    options = {
                        height: 400,
                        legend: {position: 'right'},
                        backgroundColor: 'transparent',
                        animation: {
                            duration: 400,
                            startup: true
                        },
                        chartArea: {
                            left: 64,
                            top: 24,
                            height: 352,
                            width: '75%'
                        },
                        axisTitlesPosition: 'in',
                        colors: ['#3A0676', '#E6E0EE', '#532587', '#6B4498', '#8463A9', '#9D83BB', '#B5A2CC', '#CEC1DD']
                    },
                    chart = new google.visualization.BarChart(document.getElementById('chart-area'));
            chart.draw(data, options);
        }
    </script>
{% endblock %}
