{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <h1 class="g-unit">Curves - {{ dateFormatted }}</h1>
    <h2>{{ curve.type }}</h2>
    <table class="table table--striped">
        <thead>
        <tr>
            <th>Month</th>
            <th>Value</th>
        </tr>
        </thead>
        <tbody>
            {% for month,value in curve.points %}
                <tr>
                    <td>{{ month }}</td>
                    <td>{{ value }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
