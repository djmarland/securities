{% extends 'AppBundle::base.html.twig' %}

{% use "AppBundle::account/_base.html.twig" %}

{% block content %}
    <h1 class="b g-unit">Settings</h1>
    <div class="grid">

        <div class="g 1/2@m">
            <div class="card card--padded">
                <h2 class="c g-unit">Change e-mail address</h2>
                <div>
                    {{ form_start(emailForm) }}
                    {{ form_widget(emailForm) }}
                    {{ form_end(emailForm) }}
                </div>
            </div>
        </div>
        <div class="g 1/2@m">
            <div class="card card--padded">
                <h2 class="c g-unit">Change password</h2>
                <div>
                    {{ form_start(passwordForm) }}
                    {{ form_widget(passwordForm) }}
                    {{ form_end(passwordForm) }}
                </div>
            </div>
        </div>
        <div class="g 5/12@m">

        </div>
    </div>
{% endblock %}