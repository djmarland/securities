{% extends 'AppBundle::base.html.twig' %}

{% use "AppBundle::groups/_base.html.twig" %}

{% block content %}
    <h2 class="g-unit">Issuers</h2>
    <ul class="grid">
        {% for issuer in issuers %}
            <li class="g 1/2@l 1/3@xl"><a class="link--button" href="{{ path('issuers_show',{issuer_id:issuer.id}) }}">{{ issuer.name }}</a></li>
        {% endfor %}
    </ul>
    <div class="g">
        {% include('@partials/advert.html.twig') with { adType : 'overview'} %}
    </div>
{% endblock %}
