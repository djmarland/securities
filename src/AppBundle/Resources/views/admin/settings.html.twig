{% extends 'AppBundle::base.html.twig' %}

{% use "AppBundle::admin/_base.html.twig" %}

{% block content %}
<h1 class="b g-unit">Settings</h1>
<form method="post">
<div class="grid">
    <div class="g">
        <p class="text--right"><button class="link--button" type="submit" >Save</button></p>
    </div>
    <div class="g 2/3">
        <div class="card card--padded">
            <h3 class="g-unit">Config</h3>
            <div class="form__group">
                <label class="form__label" for="field-site-title">Site Title</label>
                <input class="form__field" id="field-site-title" name="field-site-title" required
                    value="{{ appSettings.siteTitle }}" />
            </div>
            <div class="form__group">
                <label class="form__label" for="field-site-tagline">Site Tagline</label>
                <input class="form__field" id="field-site-tagline" name="field-site-tagline" required
                       value="{{ appSettings.siteTagline }}" />
            </div>
        </div>
    </div>
    <div class="g 1/3">
        <div class="card card--padded">
            <h3 class="g-unit">Features</h3>
            <table class="table table--lined">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Active?</th>
                </tr>
                </thead>
                <tbody>
            {% for featureName, featureValue in appSettings.featureList %}
                <tr>
                    <td>{{ featureName }}</td>
                    <td><input type="checkbox" name="feature-flag[]" value="{{ featureName }}"
                           {% if featureValue %}checked{% endif %} /></td>
                </tr>
            {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
</form>
{% endblock %}