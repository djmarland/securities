<table class="table table--striped g-unit">
    <thead>
        <tr>
            <th>ISIN</th>
            <th>Maturity Date</th>
            <th>Price</th>
            <th>Coupon</th>
            <th>Issue Date</th>
            <th>Currency</th>
            <th>Product</th>
        </tr>
    </thead>
    <tbody>
    {%  for security in securities %}
        <tr>
            <td><a class="security__link" href="{{ path('security_show',{'isin':security.isin}) }}">
                {{ security.isin }}
            </a></td>
            <td>{{ security.maturityDate }}</td>
            <td>{{ security.amount }}</td>
            <td>{{ security.coupon }}</td>
            <td>{{ security.startDate }}</td>
            <td>{{ security.currency }}</td>
            <td>{{ security.product }}</td>
        </tr>
    {%  endfor %}
    </tbody>
</table>